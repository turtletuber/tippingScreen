            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .tip-button, .no-thank-you-button {
            display: inline-block;
            padding: 15px 20px; /* 20px padding around the text */
            font-size: 16px;
            margin: 10px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            font-weight: 600; /* Semi-bold font */
            width: 80%; /* Make buttons fill 80% of the screen width */
            max-width: 300px; /* Set a maximum width for the buttons */
        }

        .tip-button {
            background-color: #0069fe; /* Updated button color for tips */
            color: #fff;
        }

        .no-thank-you-button {
            background-color: #e0e0e0; /* Button color for "No thank you..." */
            color: #333; /* Text color for "No thank you..." */
            width: 100%; /* Full width for "No thank you..." button */
        }

        #check-mark {
            display: none;
            color: green;
